# Isolation API Environment Variables
# Copy this file to .env and fill in your values
# Never commit .env to version control

# Data directory for isolation API runtime data
ISOLATION_API_DATA_DIR=./data

# Token to namespace mapping (JSON format)
ISOLATION_API_TOKENS='{"example_token": "example_namespace"}'

# Optional: Require HMAC signing for write requests
ISOLATION_API_REQUIRE_HMAC=0

# Optional: HMAC secrets for each namespace (JSON format)
ISOLATION_API_HMAC_SECRETS='{}'
